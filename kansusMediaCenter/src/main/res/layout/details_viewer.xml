<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="300dip"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_below="@+id/linear_layout"
            android:paddingLeft="5dip" >

            <TableRow>

                <TextView
                    android:gravity="right"
                    android:text="@string/details_file_size"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_file_size_value"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_resolution_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_image_resolution"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_resolution_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_make_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_image_make"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_make_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_model_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_image_model"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_model_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_whitebalance_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_image_whitebalance"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_whitebalance_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_duration_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_duration"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_duration_value"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_frame_rate_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_frame_rate"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_frame_rate_value"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_bit_rate_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_bit_rate"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_bit_rate_value"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_format_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_format"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_format_value"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_codec_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_codec"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_codec_value"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>

            <TableRow android:id="@+id/details_date_taken_row" >

                <TextView
                    android:gravity="right"
                    android:text="@string/details_date_taken"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/details_date_taken_value"
                    android:paddingLeft="5dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorPrimary" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/details_thumbnail_image"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@+id/details_thumbnail_image" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/details_thumbnail_image"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/details_image_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="6dip"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>